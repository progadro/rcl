
_rclt_setup:{
  rclt_file:((info #platform) like "Win*") switch {
    :"/mnt/c/Users/brian/rclkit/rclt.rclt.rclt"
    :(getenv "RCL_PREFIX") + "/rclt.rclt.rclt"
  }
  :#rclt_file putm $rclt_file
}

pass:{
  src:{
    script:[?
      rclt [! getm #rclt_file !]:pass
      exit
    ?]
    sh:startx "bash"
    :$sh writex script {}
    out:try {<-waitx $sh}
    <-template & $out.data + "\n"
  }
  bin:[?
    0 0 print 0 test
      {
        name:"pass"
        src:1 + 1
        expected:2
        actual:2
        completed:true
        status:"P"
      }
    0 0 print 0 suite
      {
        name:"rclt.rclt.rclt"
        try:1
        pass:1
        skip:0
        fail:0
        status:"P"
      }
    0 0 runner 0 exit 0
  ?]
}

